@{
	ViewBag.Title = "会员登录";
	Layout = "~/Views/Shared/_MemberLayout.cshtml";
}



<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="renderer" content="webkit">
<meta name="viewport" content="width=device-width, initial-scale=1">
@*<meta name="keywords" content="">*@
@*<meta name="description" content="">*@

<link href="~/Content/assets/css/style.3.2.0.css" rel="stylesheet" />
<style>
	.login .identity {
		text-align: center;
		width: 350px;
		padding: 0;
		margin-bottom: 20px;
	}

		.login .identity .item {
			text-decoration: none;
			color: #666;
			display: inline-block;
			line-height: 40px;
			background-color: #eee;
			width: 148px;
			margin: 0;
			border-radius: 3px;
		}

			.login .identity .item:hover {
				color: #fff;
				background-color: #4579C0;
			}

		.login .identity .active {
			color: #fff;
			background-color: #5F8DC9;
		}
</style>




<div class="user_head_bg">
	<div class="user_head">
		<div class="logobox">
			<a href="/">
				<img src="~/Content/assets/img/logo.gif" border="0">
			</a>
		</div>
		<div class="logotxt">
			|&nbsp;&nbsp;
			会员登录
		</div>
		<div class="reg">
			还没有账号？ <a id="registNow" href="/member/register" class="btn_blue J_hoverbut btn_inline">立即注册</a>
		</div>
		<div class="clear"></div>
	</div>
</div>
<div class="ban_box">
	<div class="banner_list banner_list2" style="opacity: 0; z-index: 0;"></div>
	<div class="banner_list banner_list3" style="opacity: 1; z-index: 0;"></div>
	<div class="banner_list banner_list1" style="opacity: 0; z-index: 0;"></div>
	<div class="maind">
		<div class="login">
			<!--用户名密码登录 -->
			<div class="mob j_mob_show">
				<div class="tit">
					<span class="switch_txt active">会员登录</span>
					@*<div class="switch_account link_blue" data-index="0">
							<a href="javascript:void(0)">切换为账号登录</a>
						</div>*@
				</div>

				<div id="identity" class="identity">
					<a href="javascript:void(0)" data-idt="1" class="item active">我是求职者</a>
					<a href="javascript:void(0)" data-idt="2" class="item">我是经纪人</a>
				</div>

				<div class="type_box active">
					<div id="tips" class="err J_errbox"></div>
					<div class="inputbox J_focus">
						<div class="imgbg"></div>
						<input id="username" type="text" class="input_login" name="username" placeholder="手机号/会员名/邮箱">
					</div>
					<div class="inputbox J_focus">
						<div class="imgbg pwd"></div>
						<input id="password" type="password" class="input_login pwd J_loginword" name="password" placeholder="请输入密码">
					</div>
					<div class="txtbox link_gray6">
						<div class="td1">
							<label>
								<input id="autoLogin" name="expire" class="J_expire" checked="checked" type="checkbox" value="1">
								7天内自动登录
							</label>
						</div>
						<div class="td2"><a href="/member/find">忘记密码?</a></div>
					</div>
					<div class="btnbox">
						<input id="btnLogin" class="btn_login J_hoverbut" type="button" value="登录">
					</div>
					<div class="qqbox">
						<div class="qtit">
							<div class="qtit_left"></div>
							<div class="clear"></div>
						</div>
						<div class="appsparent">
							<div class="apps">
							</div>
						</div>
						<div class="clear"></div>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>

<script src="~/Content/assets/js/member/login.js"></script>
